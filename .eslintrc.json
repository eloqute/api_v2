{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "quotes": ["warn", "double"],
    "import/extensions": ["warn", "never"],
    "comma-dangle": ["warn", "never"],
    "no-unused-vars": "off",
    "import/prefer-default-export": "off",
    "consistent-return": ["warn",
      { "treatUndefinedAsUnspecified": false }
    ]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".ts"
        ]
      }
    }
  }
}
